<?xml version="1.0" encoding="utf-8"?>

<com.example.administrator.mvpdemo.ui.CustomWidgets.FocusView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/item_selector"

    android:padding="@dimen/dp_22"

    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/img_item_h_tvblock"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="fitStart"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_item_h_tvblock"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:text = "adasdsadas"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_item_h_tvblock"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:text = "dadasdasdsad"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_item_h_tvblock"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:text = "sadsadasdasdasdasd"
        android:background="@android:color/transparent"/>

</com.example.administrator.mvpdemo.ui.CustomWidgets.FocusView >