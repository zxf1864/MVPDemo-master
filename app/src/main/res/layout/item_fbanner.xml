<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/f_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

    <ViewStub
        android:id="@+id/fbanner_index_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_32"
        android:layout_alignParentBottom="true"
        android:layout="@layout/viewstub_banner_m_index_right"
        android:background="@android:color/transparent"/>

    <ViewStub
        android:id="@+id/fbanner_index_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="@+id/f_banner"
        android:layout="@layout/viewstub_banner_m_index_bottom"
        android:background="@android:color/transparent"/>

</merge>